<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Appointment date</th>
      <th>Medical center</th>
      <th>Worker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appointment_date %></td>
        <td><%= appointment.medical_center.name %></td>
        <td><%= appointment.worker.full_name %></td>
        <td><%= link_to 'Show', appointment if can? :show, Appointment%></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) if can? :edit, Appointment%></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Appointment%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path if can? :create, Appointment %>
