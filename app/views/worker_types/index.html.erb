<p id="notice"><%= notice %></p>

<h1>Worker Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @worker_types.each do |worker_type| %>
      <tr>
        <td><%= worker_type.name %></td>
        <td><%= worker_type.description %></td>
        <td><%= link_to 'Show', worker_type if can? :show, WorkerType %></td>
        <td><%= link_to 'Edit', edit_worker_type_path(worker_type) if can? :edit, WorkerType %></td>
        <td><%= link_to 'Destroy', worker_type, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, WorkerType %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Worker Type', new_worker_type_path if can? :create, WorkerType%>
